<div class="mt-3 mb-2 card border-primary mx-auto">
  <div class="card-body">

    <%= render 'shared/errors', resource: @answer %>

    <%= form_with model: [:admin, @question, @answer], local: true do |form| %>

      <div class="form-group">
        <p>
          <%= form.label :body %><br>
          <%= form.text_area :body, id: :answer_body, class: 'form-control', placeholder: 'Enter answer'  %>
        </p>

        

        <div class="form-check">
          <%= form.label :correct, class: 'form-check-label' do %>
            <%= form.check_box :correct, id: :answer_correct, class: 'form-check-input' %>
            <%= t('helpers.label.answer.correct') %>
          <% end %>
        </div>

        <p><%= form.submit class: 'btn btn-primary' %></p>
      </div>
    <% end %>
  </div>
</div>
