<tr>
  <td class="text-center align-middle"><%= test.title.truncate(25, separator: ' ') %></td>
  <td class="text-center align-middle"><%= test_level(test) %></td>
  <td class="text-center align-middle"><%= test.questions.count %></td>
  <td class="text-center align-middle"><%= link_to t('links.show'), admin_test_path(test) %></td>
  <td class="text-center align-middle"><%= link_to t('links.edit'), edit_admin_test_path(test) %></td>
  <td class="text-center align-middle">
    <%= link_to t('links.delete'), 
                admin_test_path(test),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
  </td>
</tr>