<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <div class="d-flex gap-3 text-center">
      <h2 class="mb-1">
        <%= t('.header')%>
      </h2>

      <p class="m-0 align-self-center">
        <%= link_to t('links.new', model: human_name(Test)), new_admin_test_path, class: 'btn btn-outline-primary btn-sm' %>  
      </p>
    </div>
    <table class="table table-light table-hover table-bordered mt-2">
      <tr>
        <th class="sort-by-title pointer text-center">
          <%= t('.title') %>
          <%= octicon 'arrow-up' %>
          <%= octicon 'arrow-down' %>
        </th>
        <th class="text-center"><%= t('.level') %></th>
        <th class="text-center"><%= t('.questions') %></th>
        <th class="text-center" colspan="3"><%= t('.actions') %></th>
      </tr>

      <%= render @tests %>
    </table>
  </div>
</div>