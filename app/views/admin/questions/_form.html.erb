<div class="mt-3 mb-2 card border-primary mx-auto">
  <div class="card-body">

    <%= render 'shared/errors', resource: @question %>

    <%= form_with model: [:admin, @test, @question], local: true do |form| %>

      <div class="form-group">
        <p>
          <%= form.label :body %>
          <%= form.text_field :body, class: 'form-control', placeholder: 'Enter question' %>
        </p>

        <p>
          <%= form.submit class: 'btn btn-primary' %>
        </p>
      </div>
    <% end %>
  </div>
</div>