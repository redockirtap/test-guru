<div class="mt-3 mb-2 card border-primary mx-auto">
  <div class="card-body">

    <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>

      <div class="form-group">

        <div class="form-check">
        <%= form.collection_check_boxes :answer_ids, 
                                        @test_passage.current_question.answers,
                                        :id, :body, include_hidden: false do |b| %>
          <p>
            <%= b.check_box id: "answer_ids_#{b.object.id}", class: 'form-check-input' %> 
            <%= b.label class: 'form-check-label' %>
          </p>
        <% end %>
        </div>

        <div class="d-flex justify-content-between">
          <%= form.submit t('.next_question'), class: 'btn btn-primary' %>

          <%= link_to 'Создать Gist вопроса', 
              gist_test_passage_path(@test_passage),
              method: :post,
              class: 'btn btn-outline-danger' %>
        </div>
      </div>
    <% end %>

  </div>
</div>