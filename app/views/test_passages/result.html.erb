<div class="row justify-content-center mt-3">
  <div class="col col-md-5">
    <h2 class="row justify-content-center">
      <%= t('.header', title: @test_passage.test.title) %>
    </h2>


    <div class="mt-3 mb-2 card border-primary mx-auto">
      <div class="card-body">
        <p>
          <%= t('.correct_questions', n: @test_passage.correct_questions, m: @test_passage.test.questions.count) %>
        </p>

        <b><%= score_count(@test_passage) %></b>
      </div>
    </div>

    <%= render 'progress_bar' %>


    <%= link_to t('links.back'), tests_path %>
  </div>

</div>