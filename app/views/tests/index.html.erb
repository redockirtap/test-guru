<div class="row justify-content-center mt-3">
  <div class="col col-md-8">
    <h2 class="row justify-content-center">
      <%= t('.header')%>
    </h2>

    <table class="table table-light table-hover table-bordered">
      <tr>
        <th class="sort-by-title pointer text-center">
          <%= t('.title') %>
          <%= octicon 'arrow-up' %>
          <%= octicon 'arrow-down' %>
        </th>
        <th class="text-center"><%= t('.level')%></th>
        <th class="text-center"><%= t('.questions')%></th>
        <th class="text-center"><%= t('.actions')%></th>
      </tr>

      <%= render @tests %>
    </table>
  </div>
</div>