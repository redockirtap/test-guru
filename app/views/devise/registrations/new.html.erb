<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2 class="row justify-content-center">
      <%=t('.header')%>
    </h2>

    <%= render 'shared/errors' %>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">

            <p>
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Enter your name' %>
            </p>

            <p>
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email' %>
            </p>

            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control check-pwd pwd', placeholder: 'Enter your password' %>
            </p>

            <p>
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control check-pwd pwd-confirmation', placeholder: 'Repeat your password' %>
            </p>

            <%= f.submit t('.submit.create'), class: 'btn btn-primary' %>
          </div>
          <% end %>
      </div>
    </div>  

    <div class="mt-1">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>